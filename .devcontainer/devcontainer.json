{
    "name": "Lean Development Environment",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "leanprover.lean4"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.rulers": [100],
                "files.encoding": "utf8",
                "files.eol": "\n",
                "files.insertFinalNewline": true,
                "files.trimFinalNewlines": true,
                "files.trimTrailingWhitespace": true
            }
        }
    },
    "remoteUser": "vscode",
    "features": {
        "git": "latest"
    }
}